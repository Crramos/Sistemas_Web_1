<%- include("header", {}) %>
<section>
        <h1>Ingresa tu Información Personal</h1>
        <form action="/" method="post">
            <h4>
                <input type="text" id="name" name="name" value = '<%=event%>'  readonly>
            </h4>
            <p>
                <input type="text" id="quantity" name="quantity" value = '<%=quantity%>'  readonly>
                <input type="text" id="price" name="price" value = '<%=price%> (total en euros)'  readonly>
            </p>

            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required><br><br>
    
            <label for="apellidos">Apellidos:</label>
            <input type="text" id="apellidos" name="apellidos" required><br><br>
    
            <label for="telefono">Número de Teléfono:</label>
            <input type="tel" id="telefono" name="telefono" required><br><br>
    
            <label for="fecha_nacimiento">Fecha de Nacimiento:</label>
            <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" required><br><br>
    
            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email" required><br><br>
    
            <input type="submit" value="Comprar las entradas">
        </form>
        
    </section>
  <!-- end info_section -->
  <%- include("footer", {}) %>