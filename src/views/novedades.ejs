  <script>
    function filterEvents() {
      var input, filter, events, event, title, i;
      input = document.getElementById("eventSearch");
      filter = input.value.toUpperCase();
      events = document.getElementsByClassName("box");
  
      for (i = 0; i < events.length; i++) {
        title = events[i].querySelector("h4[data-event-title]");
        if (title) {
          if (title.getAttribute("data-event-title").toUpperCase().indexOf(filter) > -1) {
            events[i].style.display = "";
          } else {
            events[i].style.display = "none";
          }
        }
      }
    }
  </script>
