<%- include("header", {}) %>
  <!-- info section -->
 <section class="about_section layout_padding">
  <body>
    <div class="container">
      <form method="post" action="/formulario_compra">
        <h1 id="textoMostrado">
          <input type="text" id="name" name="name" value="<%= name %>"  readonly>
        </h1>
        <div class ="row">
          <div class="col-md-4">
            <div class="box">
             <div class="img-box">
              <% if (image) { %>
                <img id="imagenMostrada" width="300px" height="300px" alt="" src="<%= image %>"> 
              <% } %>
              </div>
            </div> 
          </div>       
          <div class="col-8">
            <h7 id="descripcionMostrada">
              <%= description %> 
            </h7>
          </div>
          <div class="col-3">
            <h3>
              <label for="price" class="badge badge-primary">Precio en euros (€)</label>
              <input id="price" name="price" value=" <%= price %>" readonly>
          </div>
          <div class="col-md-5 offset-md-5">
              <h3>
                <label for="quantity" class="badge badge-primary">Cantidad de Entradas:</label>
                <input type="number" id="quantity" name="quantity" min="1" value="1">
              </h3>
              <div>
                <% if (user) { %>
                  <input type="submit" formaction="/" value="Comprar las entradas">
                  Este botón envia una petición de bizum a su telefono.
                <% } else { %>
                  <input type="submit" value="Comprar las entradas">
                  Redirige a un formulario para completar la compra.
                <% } %>
              </div>
          </div>
        </div>
      </form>
    </div>
  </section>
  <%- include("footer", {}) %>